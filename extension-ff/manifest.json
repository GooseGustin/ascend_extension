{
  "manifest_version": 2,
  "name": "Ascend: GM Test Harness (Firefox)",
  "version": "1.0",
  "description": "Test the Ascend Grandmaster AI locally (Firefox build).",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "browser_action": {
    "default_title": "Open Ascend",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "permissions": [
    "storage",
    "alarms",
    "tabs",
    "<all_urls>"
  ],

  "web_accessible_resources": [
    "index.html",
    "assets/*"
  ]
}
