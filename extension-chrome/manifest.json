{
  "manifest_version": 3,
  "name": "Ascend: Grandmaster Productivity System",
  "version": "1.0",
  "description": "A productivity RPG with the GM AI supervisor.",

  "action": {
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "storage",
    "alarms",
    "scripting", 
    "windows"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "host_permissions": [
    "http://localhost:4000/*",
    "https://*/*"
  ]
}
